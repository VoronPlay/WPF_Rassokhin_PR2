        xmlns:local="clr-namespace:WPF_Rassokhin_PR3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="H" Margin="129,6,6,6"/>
        <Label Grid.Row="0" Content="Введите значение h" Margin="0,0,663,0"/>
        <TextBox x:Name="Ra" Grid.Row="1" Margin="129,6,0,0"/>
        <Label Grid.Row="1" Content="Введите значение R" Margin="0,6,663,0"/>
        <TextBox x:Name="Rs" Grid.Row="2" Margin="129,6,0,0"/>
        <Label Grid.Row="2" Content="Введите значение r" Margin="10,6,663,0"/>
        <TextBox x:Name="Itog" Grid.ColumnSpan="2" Grid.Row="2" Margin="0,46,0,0" Grid.RowSpan="2"/>
        <Button x:Name="Schet" Grid.Column="1" Grid.Row="5" Content="Выполнить"  Click="Schet_Click"/>
